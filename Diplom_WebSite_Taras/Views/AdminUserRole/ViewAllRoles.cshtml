@model IEnumerable<Diplom_WebSite_Taras.Models.RoleDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Повернутися", "Index", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Додати роль", "AddRole", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Роль
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @if (item.RoleName.ToLower() != "administrator")
                {
                    @Html.ActionLink("Видалити", "DeleteUserRole",
                   new { RoleName = item.RoleName },
                   new
                   {
                       onclick =
                   "return confirm('Чи Ви дійсно бажаєте видалити дану роль?');"
                   })
                }
            </td>

        </tr>
    }
</table>

