<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Панель Адміна</title>

    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~Content/font-awesome.css" rel="stylesheet" />
    <!--CUSTOM BASIC STYLES-->
    <link href="~/Content/basic.css" rel="stylesheet" />
    <!--CUSTOM MAIN STYLES-->
    <link href="~/Content/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  
    <nav class="navbar navbar-default navbar-cls-top " >
                
                <div class="col-sm-4">
                    <div class="logo pull-left">
                        @Html.ActionLink("Головна", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })                        
                    </div>

                </div>

                <div class="header-right">  
                  @if (User.IsInRole("Administrator"))
                  {
                    @Html.ActionLink("Сторінка адміністратора", "Index", "Home", new { area = "Admin" }, new { @class = "btn btn-primary" })
                  }
                    @Html.ActionLink("Про нас", "About", "Home", new { area = "" }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Контакти", "Contact", "Home", new { area = "" }, new { @class = "btn btn-primary" })
                    
                </div>
    </nav>

   
        <!-- /. FOOTER  -->
        <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
        <!-- JQUERY SCRIPTS -->
        <script src="~/Scripts/js/jquery-1.10.2.js"></script>
        <!-- BOOTSTRAP SCRIPTS -->
        <script src="~/Scripts/js/bootstrap.js"></script>
        <!-- METISMENU SCRIPTS -->
        <script src="~/Scripts/js/jquery.metisMenu.js"></script>
        <!-- CUSTOM SCRIPTS -->
        <script src="~/Scripts/js/custom.js"></script>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
